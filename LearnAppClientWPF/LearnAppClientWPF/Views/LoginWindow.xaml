<mah:MetroWindow x:Class="LearnAppClientWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnAppClientWPF"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
                 
        Title="Login" Height="300" Width="200">

    <Border Padding="20">
        <StackPanel>
            <TextBox Text="{Binding EmailText}"  Margin="10"/>
            <PasswordBox x:Name="psB" Margin="10" PasswordChanged="psB_PasswordChanged"/>
            <Button Command="{Binding LoginCommand}" x:Name="btnSignIn" Margin="10" Style="{DynamicResource MahApps.Styles.Button.Square}" >Sign In</Button>
            <Button Margin="10" Style="{DynamicResource MahApps.Styles.Button.Square}">I don't have account</Button>
        </StackPanel>
    </Border>
</mah:MetroWindow>